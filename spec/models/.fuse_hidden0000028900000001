require 'rails_helper'

describe User  do
  it 'validations' do
    user = FactoryGirl.create(:user) 
    user.full_name.should == "Example User" 
  end

 describe '#email' do
  
    it 'should validate presence' do
      user = FactoryGirl.create(:user) 
      user.email = '' 
      user.valid? 
      user.errors[:email].should include("can't be blank") 

      user.email = 'example@example.com' 
      user.valid? 
      user.errors[:email].should_not include("can't be blank") 
    end
    
  end
end
